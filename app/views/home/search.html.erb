
<style media="screen">
	body { 
	background: url(<%=image_path('nyc_background_img1920x1080_58933.jpg')%>) no-repeat center center fixed;
	/*background: url(<%=image_path('nyc.png')%>) no-repeat center center fixed; */*/
  	-webkit-background-size: cover;
  	-moz-background-size: cover;
  	-o-background-size: cover;
	background-size: cover;
	} 
</style>

<div class="form-group">
<%= form_tag('/home', method: "get") do %> 	
	<div class="form-group" id="form-text">	

	<%= label_tag(:distance, 'Radius:') %>
	<%= number_field_tag :radius, params[:radius], :class=>'form-control', placeholder: "Miles" %>
	</div>
	<div class="form-group" id="form-text">	
	<%= label_tag(:address, 'Address:') %>
	<%= text_field_tag :search, params[:search], :class=>'form-control', placeholder: "Leave blank for your location" %>
	</div>

	<%= submit_tag "Search", :class => 'button-link' %>
	<% end %> 
</div>
